<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    app:startDestination="@id/menuFragment">

    <fragment
        android:id="@+id/menuFragment"
        android:name="me.syamfdl.myapplication.MenuFragment"
        android:label="fragment_menu"
        tools:layout="@layout/fragment_menu" >
        <action
            android:id="@+id/action_menuFragment_to_persegiFragment"
            app:destination="@id/persegiFragment" />
        <action
            android:id="@+id/action_menuFragment_to_segitigaFragment"
            app:destination="@id/segitigaFragment" />
        <action
            android:id="@+id/action_menuFragment_to_kalkulatorFragment"
            app:destination="@id/kalkulatorFragment" />
    </fragment>
    <fragment
        android:id="@+id/aboutFragment"
        android:name="me.syamfdl.myapplication.AboutFragment"
        android:label="fragment_about"
        tools:layout="@layout/fragment_about" />
    <fragment
        android:id="@+id/persegiFragment"
        android:name="me.syamfdl.myapplication.PersegiFragment"
        android:label="fragment_persegi"
        tools:layout="@layout/fragment_persegi" />
    <fragment
        android:id="@+id/segitigaFragment"
        android:name="me.syamfdl.myapplication.SegitigaFragment"
        android:label="fragment_segitiga"
        tools:layout="@layout/fragment_segitiga" />
    <fragment
        android:id="@+id/kalkulatorFragment"
        android:name="me.syamfdl.myapplication.KalkulatorFragment"
        android:label="fragment_kalkulator"
        tools:layout="@layout/fragment_kalkulator" />
</navigation>